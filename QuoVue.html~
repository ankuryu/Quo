	<script>
alert("all is well");
function qitm(){
	this.qno=""  ;
	this.qdt=""  ;
	this.pname=""  ;
	this.paddr=""  ;
	this.enqno=""  ;
	this.qamt=""  ;
	this.c=""  ;
	this.e=""  ;

}

const app = new Vue(
	{
	el:"#wrp1",
	data:{
		addflg: 0,
	  	iflg: true ,
		sel:0,
		knt:-1,
		quos:[],
		quo :{
			qno:"",
			qdt:  "", //moment('11/11/2017','DD/MM/YYYY',true).format('L') ,
			pname:"",
			paddr:"",
			enqno:"",
			enqdt:"",
			qamt:0 ,
			c: "s",
			e: "fa",
			sl:""
		}
	},
	methods:{
		tglRo:function(){
		this.iflg = ! this.iflg ;
		},
		addclk: function(){
			this.addflg = 0;
			this.knt++;
			this.quos.push( this.quo) ;
			this.quos[this.knt].qno = this.knt
			alert("adding");
			this.quo = new qitm ;
			this.tglRo();
		},
		ediclk: function(){
			// check if there is a record to edit
			// get the value of the record
			// set quo to its value
		   this.tglRo();
		},
		delclk: function(){
			// check if there are records to delete
			 if(!this.quos.length > 0 ) {
				 wait window "No records to delete";
				 return
			 } else {
				 alert("Delete Sr " + this.sel ) + '?' ;
			 }

			// ask for confirmation
			// carry out the operation
		   this.tglRo();	
		},
		prnclk: function(){
			// check if there are records to print
			// transfer to quo
			// send for printing
	           this.tglRo();	
		},
		clkSav: function(){
			// check if the operation is add
			if(this.addflg == 0) {
				this.knt++ ;
				this.quo.push(this.quo);
			} else {
				// for edit save it here
				this.quos[this.sel] = quo
			}

		  this.tglRo();
		},
		clkCanc: function(){
		  this.tglRo(); 
		},
		clkItm: function() {
                  this.tglRo();
		},
		selupd: function() {

		}
	}
})

alert("done");
	</script>
